{% extends 'base.html.twig' %}

{% block title %}Lista stomatologów{% endblock %}

{% block body %}
<h3>Wybierz stomatologa do którego chcesz się zapisać</h3>
<hr />

   {% if canVisit %}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">Imię i nazwisko stomatologa</th>
            <th scope="col">#</th>
        </tr>
        </thead>
        <tbody>
        {% for doctor in doctors %}
        <tr>
            <td>{{  doctor.fullName }}</td>
            <td><a href="{{ path('doctor_available', {'id': doctor.id} ) }}" class="btn btn-success btn-sm">Zapisz mnie</a> </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    {% else %}

       <p>Limit rezerwacji osiągnięty. Nie można zarezerwować nowej wizyty</p>

    {% endif %}
{% endblock %}