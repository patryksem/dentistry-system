<form method="post"
      action="{{ path('department_delete', {'id': department.id}) }}"
      onsubmit="return confirm('Potwierdź akcję usunięcia harmonogramu');"
>
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ department.id) }}">
    <button class="btn btn-warning">Usuń</button>
</form>
